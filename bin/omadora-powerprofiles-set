#!/bin/bash

# Sets the power profile of the system.
# Used by the Omadora Menu under Setup > Power Profile.

profile="$1"

if powerprofilesctl set "$profile"; then
    notify-send -a "PowerProfiles" "Power profile set to '$profile'"
else
    notify-send -a "PowerProfiles" "Failed to set power profile to '$profile'"
    exit 1
fi
