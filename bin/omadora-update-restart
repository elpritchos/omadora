#!/bin/bash

STATE_DIR=$HOME/.local/state/omadora

if [ -f "$STATE_DIR/reboot-required" ]; then
  gum confirm "Updates require reboot. Ready?" && omadora-cmd-reboot
elif [ -f "$STATE_DIR/relaunch-required" ]; then
  gum confirm "Updates require Hyprland relaunch. Ready?" && omadora-cmd-stop
fi

for file in "$HOME"/.local/state/omadora/restart-*-required; do
  if [ -f "$file" ]; then
    filename=$(basename "$file")
    service=$(echo "$filename" | sed 's/restart-\(.*\)-required/\1/')
    echo "Restarting $service"
    omadora-state clear "$filename"
    omadora-restart-"$service"
  fi
done
